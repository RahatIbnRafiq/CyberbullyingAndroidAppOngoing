<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vine_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cybersafetyapp.ActivityPackage.VineLogin">

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="127dp"
        android:id="@+id/activity_vine_login_emailtext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_vine_login_emailtext"
        android:layout_alignEnd="@+id/activity_vine_login_emailtext"
        android:layout_marginTop="47dp"
        android:id="@+id/activity_vine_login_passwordText"
        android:text="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignBottom="@+id/activity_vine_login_passwordText"
        android:layout_toEndOf="@+id/activity_vine_login_emailtext"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="48dp"
        android:id="@+id/activity_vine_login_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/activity_vine_login_emailtext"
        android:layout_alignEnd="@+id/activity_vine_login_email"
        android:layout_marginTop="33dp"
        android:id="@+id/activity_vine_login_password" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_vine_login_password"
        android:layout_alignStart="@+id/activity_vine_login_password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:onClick="onclickLogInButton"
        android:id="@+id/button3" />
</RelativeLayout>
