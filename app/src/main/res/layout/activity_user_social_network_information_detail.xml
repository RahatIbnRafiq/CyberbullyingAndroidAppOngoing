<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_social_network_information_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cybersafetyapp.ActivityPackage.UserSocialNetworkInformationDetail">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:navigationIcon="@mipmap/ic_menu_black_24dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <Button
        android:id="@+id/button_activity_user_social_network_information_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Posts"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="70dp"
        android:paddingLeft="20dp"
        android:onClick="buttonOnClickGetUserPostInformation"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_user_social_network_information_detail_TableUSerInformationDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:paddingLeft="20dp"
            android:shrinkColumns="*">
        </TableLayout>

</RelativeLayout>

        <!-- Navigation View -->
    <android.support.design.widget.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header"
    app:itemIconTint="#8C000000"
    app:itemTextColor="#E6000000" />
    </android.support.v4.widget.DrawerLayout>
